{
  "name": "react-abc-modal",
  "version": "2.0.1",
  "private": false,
  "description": "A React modal as simple as ABC",
  "tags": [
    "react",
    "modal",
    "typescript",
    "accessibility"
  ],
  "keywords": [
    "react",
    "modal",
    "react-component",
    "es6",
    "simple",
    "easy",
    "typescript",
    "accessibility",
    "ABC"
  ],
  "author": "Claire Lavigne <lavigneclaire81@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Claire-Lavigne/react-abc-modal.git"
  },
  "bugs": {
    "url": "https://github.com/Claire-Lavigne/react-abc-modal/issues"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:types": "tsc --project tsconfig.json",
    "build:js": "babel src/lib --extensions \".ts,.tsx,.js,.jsx\" --out-dir dist --copy-files",
    "build": "npm run clean && npm run build:types && npm run build:js",
    "check": "tsc --noEmit",
    "dev:playground": "cd playground && npm run dev"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.0",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.6.3"
  },
  "homepage": "https://github.com/Claire-Lavigne/react-abc-modal#readme",
  "publishConfig": {
    "access": "public"
  }
}
