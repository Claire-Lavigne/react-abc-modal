{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src/lib"]
}
